{
  "manifest_version": 2,
  "name": "DTU Learn Dark Mode",
  "version": "1.0",
  "description": "Dark mode for DTU Learn (learn.inside.dtu.dk) - Makes your courses easier on the eyes!",
  "browser_specific_settings": {
    "gecko": {
      "id": "dtu-dark-mode@dtu-after-dark",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "web_accessible_resources": ["dtuaften.jpg", "logo_dark.png", "Corp_White_Transparent.png", "Mojangles text.png"],
  "content_scripts": [
    {
      "matches": ["*://learn.inside.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://s.brightspace.com/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://sts.ait.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://evaluering.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://studieplan.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://kurser.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://karakterer.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://sites.dtu.dk/*"],
      "css": ["darkmode.css"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
